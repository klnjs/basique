	"devDependencies": {
		"@klnjs/basique": "workspace:*",
		"@klnjs/eslint-config": "4.4.1",
		"@klnjs/prettier-config": "4.4.1",
		"@klnjs/types": "workspace:*",
		"@klnjs/typescript-config": "4.4.1",
		"eslint": "9.29.0",
		"prettier": "3.5.3",
