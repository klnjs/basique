{
	"extends": "@klnjs/typescript-config/esnext",
	"compilerOptions": {
		"outDir": "dist",
		"noPropertyAccessFromIndexSignature": false,
		"sourceMap": true,
		"allowJs": true,
		"checkJs": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"types": ["svelte"]
	},
	"exclude": ["dist", "node_modules"],
	"include": [
		"index.ts",
		"src/**/*.ts",
		"src/**/*.js",
		"src/**/*.svelte",
		"vite.config.ts",
		"svelte.config.js"
	]
}
