---
import Table from '../table/Table.astro'
import TableRow from '../table/TableRow.astro'
import TableCell from '../table/TableCell.astro'
import classes from './Reference.module.css'

interface Props {
	props: {
		name: string
		type: string
		typeAdvanced?: string
		defaultValue: string
	}[]
}

const { props } = Astro.props
---

<Table class={classes.table}>
	<thead>
		<TableRow>
			<TableCell as="th">Prop</TableCell>
			<TableCell as="th">Type</TableCell>
			<TableCell as="th">Default</TableCell>
		</TableRow>
	</thead>
	<tbody>
		{props.map(({ name, type, defaultValue = '-' }) => (
			<TableRow>
				<TableCell class={classes.prop}>{name}</TableCell>
				<TableCell class={classes.type}>
					<code>{type}</code>
				</TableCell>
				<TableCell>
					<code>{defaultValue}</code>
				</TableCell>
			</TableRow>
		))}
	</tbody>
</Table>
