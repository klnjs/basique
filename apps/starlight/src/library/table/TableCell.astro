---
import clsx from 'clsx'
import classes from './Table.module.css'

type Props = astroHTML.JSX.TdHTMLAttributes & {
	as?: 'td' | 'th'
	class?: string
	children: any
}

const { as: Component = 'td', class: classProp, children, ...otherProps } = Astro.props
---

<Component 
	class={clsx(classes.cell, classProp, 'not-content',  {
		[classes.td]: Component === 'td',
		[classes.th]: Component === 'th'
	})} 
	{...otherProps}
>
	<slot />
</Component>
