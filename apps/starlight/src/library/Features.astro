---
type Props = astroHTML.JSX.HTMLAttributes & {
	children: any;
}

const { class: classProp, ...otherProps } = Astro.props
---

<style>
	.features {
		display: flex;
		margin: 0;
		padding: 0;
		flex-direction: column;
		list-style: none;
	}

	.list {
		display: flex;
		flex-direction: column;
		margin: 0;
		gap: 8px;
		padding: 0;
	}
</style>

<div class:list={['not-content', 'features', classProp]} {...otherProps}>
	<ul class:list={['not-content', 'list']}>
		<slot/>
	</ul>
</div>
